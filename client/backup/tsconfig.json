{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "removeComments": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true
  },
  "baseUrl": "./src",
  "exclude": ["target", "dist", "node_modules", "__tests__"],
  "include": ["**/*.ts"]
}
